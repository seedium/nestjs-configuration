{
  "name": "nestjs-configuration",
  "version": "1.3.0",
  "description": "Config module for NestJS application",
  "scripts": {
    "clean": "rimraf -rf 'dist' 'tsconfig.tsbuildinfo'",
    "build": "npm run clean && tsc -p tsconfig.json",
    "lint": "eslint lib/**/*.ts",
    "lint:test": "eslint -c .eslintrc.spec.yaml test/**/*.spec.ts",
    "format": "prettier '{lib,test}/**/*.ts' '{lib,test}/*.ts'",
    "test": "npm run clean && nyc --nycrc-path .nycrc.yaml mocha --reporter spec --exit test/**/*.spec.ts",
    "prerelease": "npm run build",
    "release": "release-it",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seedium/nestjs-configuration.git"
  },
  "keywords": [
    "nestjs",
    "config",
    "typescript",
    "seedium",
    "di"
  ],
  "author": "Kostya Zgara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seedium/nestjs-configuration/issues"
  },
  "homepage": "https://github.com/seedium/nestjs-configuration#readme",
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-angular": "12.1.1",
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@nestjs/common": "7.6.15",
    "@nestjs/core": "7.6.15",
    "@nestjs/testing": "7.6.15",
    "@release-it/conventional-changelog": "2.0.1",
    "@types/chai": "4.2.17",
    "@types/chai-as-promised": "7.1.3",
    "@types/glob": "7.1.3",
    "@types/mocha": "8.2.2",
    "@types/node": "14.14.41",
    "@types/sinon": "10.0.0",
    "@types/sinon-chai": "3.2.5",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "dotenv": "8.2.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "mocha": "8.3.2",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "proxyquire": "2.1.3",
    "reflect-metadata": "0.1.13",
    "release-it": "14.6.1",
    "rxjs": "6.6.7",
    "sinon": "10.0.0",
    "sinon-chai": "3.6.0",
    "ts-node": "9.1.1",
    "tslib": "2.2.0",
    "typescript": "4.2.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.0.0 || ^7.0.0",
    "@nestjs/core": "^6.0.0 || ^7.0.0",
    "dotenv": "^8.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0"
  },
  "dependencies": {
    "glob": "7.1.7",
    "lodash.isfunction": "3.0.9",
    "lodash.isplainobject": "4.0.6",
    "lodash.merge": "4.6.2",
    "lodash.property": "4.4.2",
    "ts-toolbelt": "9.6.0"
  }
}
